<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="AMS.ApplicationCore" namespace="AMS.ApplicationCore.Entities">
  <class name="Rating">
    <id name="Id">
      <generator class="native" />
    </id>

    <property name="GoalId" not-null="true" />
    <property name="GoalType" not-null="true" />
    <property name="Rate" not-null="true" />
    <property name="Comment" not-null="true" />

    <many-to-one name="Rater" column="Rater" not-null="true"/>
    <many-to-one name="Ratee" column="Ratee" not-null="true"/>

    <property name="CreatedOn" not-null="true" />
    <property name="CreatedBy" not-null="true" />
    <property name="UpdatedOn" />
    <property name="UpdatedBy" />
  </class>
</hibernate-mapping>